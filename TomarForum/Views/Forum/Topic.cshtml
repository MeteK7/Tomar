@model TomarForumUI.ViewModels.ForumViewModels.ForumTopicViewModel

<h1>Welcome to the @Model.Forum.Title Forum!</h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.ReplyAmount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="no-posts">
        <h3>
            There is no any @Model.Forum.Title here. <br />
            Want to <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id"><span>create</span></a>?
        </h3>
    </div>
}