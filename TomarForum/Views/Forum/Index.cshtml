@model TomarForumUI.ViewModels.ForumViewModels.ForumIndexViewModel

<h1>Forums</h1>

<table class="table table-hover" id="forum-index-table">
    <tbody>
        @foreach (var forum in Model.ForumList)
        {
            <tr>
                <td>
                    @forum.Name
                </td>
                <td>
                    @forum.Description
                </td>
            </tr>
        }
    </tbody>
</table>