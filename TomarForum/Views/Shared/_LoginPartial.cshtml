@using Microsoft.AspNetCore.Identity
@using TomarForumData.EntityModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["URL"] = ViewContext.HttpContext.Request.Path;
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li role="separator" class="divider"></li>
                <li class="dropdown-header">Profile</li>
                <li><a asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)">My Profile</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li role="separator" class="divider"></li>
                    <li class="dropdown-header">Admin</li>
                    <li><a asp-controller="Forum" asp-action="Create">Create Forum</a></li>
                    <li><a asp-controller="Profile" asp-action="Index">View Users</a></li>
                }
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else /*TRY TO IMPROVE THIS ELSE SECTION BY COMBINING THE SIMILARITIES.*/
    {
        @if (@ViewData["URL"].ToString() == "/Identity/Account/Login")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
        }
        else if (@ViewData["URL"].ToString() == "/Identity/Account/Register")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    }
</ul>