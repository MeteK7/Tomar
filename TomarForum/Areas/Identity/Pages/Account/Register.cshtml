@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    ViewData["URL"] = ViewContext.HttpContext.Request.Path;
}

@section Head{
    <style type="text/css">
        body {
            background-image: url('../../images/theme/abstract-textured-backgound.jpg');
            background-repeat: repeat-x;
            padding-bottom: 20px;
        }
    </style>
}

<center>
    <div class="div-register-logo">
        <img class="img-register-logo" src="~/images/icons/add-user-dashed.png" />
    </div>
    <h1>@ViewData["Title"]</h1>
    <div class="div-register-main">
        <div class="div-register-inside">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </section>
        </div>
    </div>
</center>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
