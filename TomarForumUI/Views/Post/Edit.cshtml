@model TomarForumViewModel.PostViewModels.PostEditViewModel

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Post" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input asp-for="Post.Id" readonly hidden />
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Edit this article.
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="HeaderImage"></label>
                            <div class="custom-file">
                                <input asp-for="HeaderImage" class="custom-file-input" accept="image/*" />
                                <label class="custom-file-label">Choose file</label>
                            </div>
                            <span asp-validation-for="HeaderImage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Post.Title"></label>
                            <input asp-for="@Model.Post.Title" class="form-control" required />
                            <span asp-validation-for="@Model.Post.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Content"></label>
                            <textarea asp-for="Post.Content" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Post.Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>