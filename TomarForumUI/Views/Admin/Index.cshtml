@model TomarForumViewModel.AdminViewModels.AdminIndexViewModel
@{ 
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="col-xl-2 col-md-3 mb-4">
                <div class="card border-0 shadow">
                    <img src="@post.Forum.ImageUrl" class="card-img-top" />
                    <div class="card-body">
                        <div row="row" style="margin: 0px auto 10px 0px;">
                            <div><h5 class="card-title mb-0">@post.Title</h5></div>
                        </div>
                        <div class="row ml-0" style="bottom:0;">
                            <div><i class="fas fa-comment" style="color:gray"></i></div>
                            <p class="text-muted ml-3 mb-0">@post.Replies.Count() comments</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id" class="btn btn-primary">
                                    <i class="fa fa-arrow-circle-right"></i> View
                                </a>
                            </div>
                            <div class="col">
                                <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-secondary float-right">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>